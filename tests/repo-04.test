#!/bin/bash

# Test if slide insertion works

trap 'rm $TMP1 $TMP2' 0
TMP1=`mktemp /tmp/slide-XXXXXX` || exit 1
TMP2=`mktemp /tmp/slide-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> Repo: https://github.com/w3ctag/design-principles/
<foo> -> https://github.com/w3c/webrtc-pc/issues/32 Issue #32
EOF

perl scribe.perl -embed $TMP1 >$TMP2 || exit 1

grep -E '<a href="https://github.com/w3c/webrtc-pc/issues/32">' $TMP2 || exit 1
grep -L '<a href="https://github.com/w3ctag/design-principles/issues/32">' $TMP2 || exit 1
exit 0
