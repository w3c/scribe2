#!/bin/bash

# Test that math works and does not interfere with URLs.

# Only applicable if latexmlmath is installed:
if ! type -t latexmlmath >/dev/null; then exit 2; fi

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/arrows-XXXXXX` || exit 1
TMP2=`mktemp /tmp/arrows-XXXXXX` || exit 1
TMP3=`mktemp /tmp/arrows-XXXXXX` || exit 1
TMP4=`mktemp /tmp/arrows-XXXXXX` || exit 1

cat >$TMP1 <<'EOF'
<foo> A line without emphasis.
<foo> A line with displayed math: $$\frac{1}{1+x^2}$$
<foo> A line with inline math: $\sqrt{\frac{1}{x}}$
<foo> A line with ->http://example.org/1/ $e=mc^2$./
<foo> A line with an -> $\sin(\pi)$ http://example.org/ not at the end.
<foo> A line with -> $ax + y^3$ link http://example.org/3/
<foo> scribeoptions: -emph
EOF

cat >$TMP4 <<'EOF'
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=x001 class=summary>A line without emphasis.</p>
<p id=x002 class=summary>A line with displayed math: 
<math xmlns="http://www.w3.org/1998/Math/MathML" alttext="\frac{1}{1+x^{2}}" display="block">
  <mfrac>
    <mn>1</mn>
    <mrow>
      <mn>1</mn>
      <mo>+</mo>
      <msup>
        <mi>x</mi>
        <mn>2</mn>
      </msup>
    </mrow>
  </mfrac>
</math>
</p>
<p id=x003 class=summary>A line with inline math: 
<math xmlns="http://www.w3.org/1998/Math/MathML" alttext="\sqrt{\frac{1}{x}}" display="inline">
  <msqrt>
    <mfrac>
      <mn>1</mn>
      <mi>x</mi>
    </mfrac>
  </msqrt>
</math>
</p>
<p id=x004 class=summary>A line with <a href="http://example.org/1/">
<math xmlns="http://www.w3.org/1998/Math/MathML" alttext="e=mc^{2}" display="inline">
  <mrow>
    <mi>e</mi>
    <mo>=</mo>
    <mrow>
      <mi>m</mi>
      <mo>⁢</mo>
      <msup>
        <mi>c</mi>
        <mn>2</mn>
      </msup>
    </mrow>
  </mrow>
</math>
./</a></p>
<p id=x005 class=summary>A line with an <a href="http://example.org/">
<math xmlns="http://www.w3.org/1998/Math/MathML" alttext="\sin(\pi)" display="inline">
  <mrow>
    <mi>sin</mi>
    <mo>⁡</mo>
    <mrow>
      <mo stretchy="false">(</mo>
      <mi>π</mi>
      <mo stretchy="false">)</mo>
    </mrow>
  </mrow>
</math>
</a> not at the end.</p>
<p id=x006 class=summary>A line with <a href="http://example.org/3/">
<math xmlns="http://www.w3.org/1998/Math/MathML" alttext="ax+y^{3}" display="inline">
  <mrow>
    <mrow>
      <mi>a</mi>
      <mo>⁢</mo>
      <mi>x</mi>
    </mrow>
    <mo>+</mo>
    <msup>
      <mi>y</mi>
      <mn>3</mn>
    </msup>
  </mrow>
</math>
 link</a></p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2

# Extract just the minutes:
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
