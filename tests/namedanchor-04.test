#!/bin/bash

# Test that "namedAnchorHere" of the form "toc" is ignored.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> scribe: foo
<foo> Pete: Something else
<foo> NamedAnchorHere : Right "Here"! 
<foo> .. I wanted to say.
<foo> ... Very important
<foo> q+
<bar> q+
<baz> q?
<foo> namedanchorhere:  toc  
<foo> ..at least to me.
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=51fe class="phone s01"><cite>Pete:</cite> Something else</p>
<p class=anchor id="Right_&quot;Here&quot;!"><a href="#Right_&quot;Here&quot;!">⚓</a></p>
<p id=8985 class="phone s01"><cite>Pete:</cite> I wanted to say.<br>
<span id=ba85>… Very important</span></p>
<p id=4390 class=irc><cite>&lt;foo&gt;</cite> namedanchorhere:  toc  </p>
<p id=e990 class="phone s01"><cite>Pete:</cite> at least to me.</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
