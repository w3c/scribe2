#!/bin/bash

# Test the extended scribe/scribenick commands.

trap 'rm $TMP1 $TMP2 $TMP3' 0
TMP1=`mktemp /tmp/scribenick-XXXXXX` || exit 1
TMP2=`mktemp /tmp/scribenick-XXXXXX` || exit 1
TMP3=`mktemp /tmp/scribenick-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> The meeting starts.
<bar> Rob: I'm here.
<foo> scribe: foo = John Smith Sr., bar=Jonathan.
<foo> Rob: Or am I?
<bar> The meeting ends.
<bar> scribenick- bar
<bar> I'm not scribe now!
<bar> scribenick +bar
<bar> I'm scribe again!
<bar> scribenick  -
<bar> I'm not scribe now!
<bar> scribenick+
<bar> I'm scribe again!
<foo> I'm scribe, too.
EOF

cat >$TMP2 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class=summary>The meeting starts.</p>
<p class="phone s01"><cite>Rob:</cite> I'm here.</p>
<p class="phone s01"><cite>Rob:</cite> Or am I?</p>
<p class=summary>The meeting ends.</p>
<p class=irc><cite>&lt;bar&gt;</cite> I'm not scribe now!</p>
<p class=summary>I'm scribe again!</p>
<p class=irc><cite>&lt;bar&gt;</cite> I'm not scribe now!</p>
<p class=summary>I'm scribe again!</p>
<p class=summary>I'm scribe, too.</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 | sed -n -e '/<main/,/<\/main>/p' >$TMP3

diff -u $TMP2 $TMP3
