#!/bin/bash

# Test that a s/// can change the name of a speaker.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> Joe: Original text
<foo> Joey: More text
<foo> Jen: Other text
<foo> s/Joey/Joe/
<foo> s/Joe:/Josh:/g
<foo> s/Jen: Other text/Josh: Also my text/
<foo> s/Pete: text/Josh: There's no Pete/
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=x001 class="phone s01"><cite>Josh:</cite> Original text</p>
<p id=x002 class="phone s01"><cite>Josh:</cite> More text</p>
<p id=x003 class="phone s01"><cite>Josh:</cite> Also my text</p>
<p id=x007 class=irc><cite>&lt;foo&gt;</cite> s/Pete: text/Josh: There's no Pete/</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
