#!/bin/bash

# Test of multiple images (with "-->") with anchortext and emphasis.

trap 'rm $TMP1 $TMP2 $TMP3' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1

url1="https://www.w3.org/Icons/w3c_48x48.png"
title1="W3C logo"
url2="https://www.w3.org/Icons/www24.png"
title2="WWW logo"

# Expected line.
echo "<section><p id=x001 class=summary>  And <strong>here</strong> are some images:    <a href=\"$url1\"><img src=\"$url1\" alt=\"$title1\"></a>   <a href=\"$url2\"><img src=\"$url2\" alt=\"/$title2/\"></a></p>" >$TMP1

# Get the generated line:
echo "<foo>   And *here* are some images:    -->$title1  $url1   -->   /$title2/ $url2" | \
  perl scribe.perl -emph >$TMP3
cat $TMP3
grep "$url1" $TMP3 >$TMP2

# Compare:
diff -u $TMP1 $TMP2
