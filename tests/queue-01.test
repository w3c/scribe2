#!/bin/bash

# Test that queue commands are ignored

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> First line
<foo> q+
<foo> q  +
<foo> queue+
<foo> queue   +
<foo> q+ foo
<foo> queue+ foo
<foo> queue + foo
<foo> q= foo, bar
<foo> q   = foo, bar
<foo> queue= foo, bar
<foo> q?
<foo> queue ?
<foo> +q
<foo> +queue
<foo> +q me
<foo> +queue me
<foo> = q
<foo> =  queue
<foo> ?q
<foo> ?queue
<foo> +queuing is not ignored
<foo> ?quoi is not ignored
<foo> chair acks next
<foo> chair recognizes next
<foo> vq?
<foo>  pls show the  full q?
<foo> q
<foo> QQ+
<foo> r
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=x001 class=summary>First line</p>
<p id=x022 class=summary>+queuing is not ignored</p>
<p id=x023 class=summary>?quoi is not ignored</p>
<p id=x030 class=summary>r</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
