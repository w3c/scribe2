#!/bin/bash

# Test i/../../ command

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> Original text
<foo> Original text
<foo> i/Original/Topic: Second topic
<foo> More text
<foo> i/Original/Inserted line/
<foo> i/Inserted line/Another inserted line
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=x001 class=summary>Original text</p>
</section>

<section>
<h3 id=t01>Second topic</h3>
<p id=x003 class=summary>Another inserted line</p>
<p id=x004 class=summary>Inserted line</p>
<p id=x005 class=summary>Original text</p>
<p id=x007 class=summary>More text</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
