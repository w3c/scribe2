#!/bin/bash

# Check that speakers are distinguished from random text, with -allowspace

trap 'rm $TMP1 $TMP2 $TMP3' 0
TMP1=`mktemp /tmp/speaker-XXXXXX` || exit 1
TMP2=`mktemp /tmp/speaker-XXXXXX` || exit 1
TMP3=`mktemp /tmp/speaker-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> scribe: foo
<foo> bar: I say
<foo>  true: I say
<foo> 2top: me too
<foo>  5:00 pm: 5 is not a speaker
<foo> .hidden: I'm a speaker
<foo>  hidden: but this is a continuation
<foo> "dpv:nace" has a quote and is not a speaker
<foo> http://example.org/ is a URL and not a speaker
EOF

cat >$TMP2 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=beea class="phone s01"><cite>bar:</cite> I say<br>
<span id=1e97>… true: I say</span></p>
<p id=960a class="phone s02"><cite>2top:</cite> me too<br>
<span id=f4f7>… 5:00 pm: 5 is not a speaker</span></p>
<p id=9279 class="phone s03"><cite>.hidden:</cite> I'm a speaker<br>
<span id=63a5>… hidden: but this is a continuation</span></p>
<p id=6393 class=summary>&quot;dpv:nace&quot; has a quote and is not a speaker</p>
<p id=64e4 class=summary><a href="http://example.org/">http://<wbr>example.org/</a> is a URL and not a speaker</p>
</section>
</main>
EOF

perl scribe.perl -allowspace $TMP1 | \
  sed -n -e '/<main/,/<\/main>/p' >$TMP3

diff -u $TMP2 $TMP3
