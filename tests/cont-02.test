#!/bin/bash

# Test that continuation lines are recognized, even if the scribe
# himself uses a present* command in between.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> scribe: foo
<foo> Pete: Something else
<foo> .. I wanted to say.
<foo> ... Very important
<foo> present+
<foo> regrets : bonnie, clyde
<bar> present+ bar
<baz> q?
<foo> ..at least to me.
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p class="phone s01"><cite>Pete:</cite> Something else<br>
… I wanted to say.<br>
… Very important<br>
… at least to me.</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP3 $TMP4
