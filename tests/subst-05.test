#!/bin/bash

# Test that a failed s/// remains in the minutes, while a successful
# one is removed.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> Original text
<foo> Anchor text
<foo> s/Original/Changed/
<foo> s/Non-existent/Changed/
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=x001 class=summary>Changed text</p>
<p id=x002 class=summary>Anchor text</p>
<p id=x004 class=irc><cite>&lt;foo&gt;</cite> s/Non-existent/Changed/</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2 || exit 1

# Extract just the minutes
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3

diff -u $TMP4 $TMP3
