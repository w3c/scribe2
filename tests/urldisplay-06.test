#!/bin/bash

# --urlDisplay option 'full'

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<foo> baz: Hi
<foo> bar: https://www.example.org/a/long/path
<foo> ScribeNick: foo
EOF

cat >$TMP4 <<EOF
<p class="phone s02"><cite>bar:</cite> <a href="https://www.example.org/a/long/path">https://www.example.org/a/long/path</a></p>
EOF

perl scribe.perl --urlDisplay=full <$TMP1 >$TMP2 || exit 1
grep -F '<cite>bar:</cite>' $TMP2 >$TMP3
diff -u $TMP3 $TMP4
