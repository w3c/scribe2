#!/bin/bash

# Test continuation lines of multiple concurrent scribes.
# Ben is scribing what Joe says, so his "..." means Joe.
# And Joe is scribing Ben, so his "..." means Ben.

trap 'rm $TMP1 $TMP2 $TMP3 $TMP4' 0
TMP1=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP2=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP3=`mktemp /tmp/topics-XXXXXX` || exit 1
TMP4=`mktemp /tmp/topics-XXXXXX` || exit 1

cat >$TMP1 <<EOF
<Ann> scribenick: Ben, Joe, Ann
<Ben> Joe: I agree.
<Joe> Ben: Hmm,
<Ben> ... With everything.
<Joe> ... OK, I agree.
<Ann> Joe and Ben agree.
EOF

cat >$TMP4 <<EOF
<main id=meeting class=meeting>
<h2>Meeting minutes</h2>
<section><p id=f2c2 class="phone s01"><cite>Joe:</cite> I agree.</p>
<p id=feee class="phone s02"><cite>Ben:</cite> Hmm,</p>
<p id=9b41 class="phone s01"><cite>Joe:</cite> With everything.</p>
<p id=bb02 class="phone s02"><cite>Ben:</cite> OK, I agree.</p>
<p id=5da9 class=summary>Joe and Ben agree.</p>
</section>
</main>
EOF

perl scribe.perl $TMP1 >$TMP2
sed -n -e '/<main/,/<\/main>/p' $TMP2 >$TMP3
diff -u $TMP4 $TMP3
